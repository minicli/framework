{
  "name": "minicli/framework",
  "description": "The Minicli framework",
  "license": "MIT",
  "type": "library",
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:minicli/mini-plugin.git"
    }
  ],
  "require": {
    "php": "^8.2",
    "minicli/mini-plugin": "dev-main"
  },
  "require-dev": {
    "laravel/pint": "^1.10",
    "pestphp/pest": "^2.6",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "Minicli\\Framework\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Minicli\\Framework\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "pint": [
      "./vendor/bin/pint"
    ],
    "stan": [
      "./vendor/bin/phpstan analyse --memory-limit=3G"
    ],
    "test": [
      "./vendor/bin/pest"
    ]
  },
  "scripts-descriptions": {
    "pint": "Run Laravel Pint code styling.",
    "stan": "Run PHPStan against code base.",
    "test": "Run test suite."
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "minicli/mini-plugin": true
    }
  }
}
